local Char = script.Parent

local RightArm = Char:WaitForChild("Right Arm")
local LeftArm = Char:WaitForChild("Left Arm")
local RightLeg = Char:WaitForChild("Right Leg")
local LeftLeg = Char:WaitForChild("Left Leg")
local Hum = Char:WaitForChild("Humanoid")

LeftLeg.Transparency = 1
RightLeg.Transparency = 1
Hum.HipHeight = -1
RightArm.Size = Vector3.new(1,3,1)
LeftArm.Size = Vector3.new(1,3,1)
RightArm.Position = RightArm.Position + Vector3.new(0, -0.5,0)
LeftArm.Position = LeftArm.Position + Vector3.new(0, -0.5,0)
